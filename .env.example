# Database Configuration
DATABASE_URL=postgresql://ai_handoff_user:ai_handoff_password@localhost:5432/ai_handoff
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_handoff
DB_USER=ai_handoff_user
DB_PASSWORD=ai_handoff_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
PORT=3000
NODE_ENV=development

# MCP Configuration
MCP_SERVER_NAME=ai-handoff-mcp
MCP_SERVER_VERSION=1.0.0

# Security
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Logging
LOG_LEVEL=info

# Retention Policy Configuration
RETENTION_SESSION_EXPIRATION_DAYS=30
RETENTION_CONTEXT_HISTORY_DAYS=90
RETENTION_PERFORMANCE_LOGS_DAYS=30
RETENTION_SYSTEM_METRICS_DAYS=90
RETENTION_ANALYTICS_AGGREGATION_DAYS=365
RETENTION_DORMANT_SESSION_THRESHOLD_DAYS=7
RETENTION_ARCHIVE_AFTER_DAYS=90
RETENTION_PURGE_ARCHIVED_DAYS=365
RETENTION_ENABLE_AUTO_CLEANUP=true
RETENTION_CLEANUP_SCHEDULE_CRON="0 2 * * *"

# Monitoring Configuration
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_METRICS_COLLECTION_INTERVAL=60
MONITORING_PERFORMANCE_TRACKING_ENABLED=true
MONITORING_ALERT_THRESHOLD_RESPONSE_TIME=1000
MONITORING_ALERT_THRESHOLD_ERROR_RATE=5
MONITORING_ALERT_THRESHOLD_MEMORY_USAGE=80
MONITORING_ALERT_THRESHOLD_DISK_USAGE=85
MONITORING_ALERT_THRESHOLD_CPU_USAGE=80
MONITORING_ALERT_THRESHOLD_SESSION_COUNT=1000
MONITORING_ENABLE_PROMETHEUS_EXPORT=true
MONITORING_ENABLE_HEALTH_ENDPOINT=true
MONITORING_ENABLE_STRUCTURED_LOGGING=true
MONITORING_ENABLE_AUDIT_TRAIL=true
MONITORING_ANOMALY_DETECTION_ENABLED=true
MONITORING_ANOMALY_SESSION_DURATION_ZSCORE=2.5
MONITORING_ANOMALY_CONTEXT_SIZE_ZSCORE=2.5
MONITORING_ANOMALY_HANDOFF_FREQUENCY_ZSCORE=2.5

# Analytics Configuration
ANALYTICS_ENABLE_SESSION_ANALYTICS=true
ANALYTICS_ENABLE_PERFORMANCE_ANALYTICS=true
ANALYTICS_ENABLE_USAGE_ANALYTICS=true
ANALYTICS_AGGREGATION_REALTIME=true
ANALYTICS_AGGREGATION_HOURLY=true
ANALYTICS_AGGREGATION_DAILY=true
ANALYTICS_AGGREGATION_WEEKLY=true
ANALYTICS_AGGREGATION_MONTHLY=false
ANALYTICS_RAW_DATA_RETENTION_DAYS=30
ANALYTICS_AGGREGATED_DATA_RETENTION_DAYS=365
ANALYTICS_ENABLE_DATA_COMPRESSION=true
ANALYTICS_REPORTING_ENABLED=false
ANALYTICS_REPORTING_SCHEDULE="0 6 * * 1"
ANALYTICS_EXPORT_FORMATS=json
ANALYTICS_ENABLE_TREND_ANALYSIS=true
ANALYTICS_ENABLE_PREDICTIVE_ANALYTICS=false
ANALYTICS_ML_MODEL_UPDATE_INTERVAL=24