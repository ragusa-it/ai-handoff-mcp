{
  "name": "ai-handoff-mcp",
  "version": "1.0.0",
  "description": "AI Handoff Model Context Protocol (MCP) server for seamless context transfer between AI agents",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:setup": "bash scripts/setup-db.sh",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "ai",
    "handoff",
    "context",
    "protocol"
  ],
  "author": "Melvin Ragusa",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/jest": "^29.5.12",
    "@types/knex": "^0.15.2",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
